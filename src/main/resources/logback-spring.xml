<configuration>
    <appender name="CON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}|%highlight(%-5level)|%green(%X{hostName}:%X{userName})|%msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CON" />
    </root>
</configuration>